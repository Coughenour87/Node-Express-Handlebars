<div class="container">
    <div class="row">
        <div class="col-sm">

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                   {{id}}. {{burger_name}}
                    <button value={{id}} class='devour'>Eat-Da-Burger</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <h2>Burgers Devoured</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                   {{id}}. {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
            <h2>Add a Burger</h2>
            <form id="addburger" class="burger-form">
                <textarea id="theBurgerName" type="text" name="burger"></textarea>
                <button type="submit">Save!</button>
            </form>

        </div>

    </div>
</div>